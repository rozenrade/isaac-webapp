{% extends 'base.html.twig' %}

{% block title %}Synergy index
{% endblock %}

{% block body %}
	<div class="max-w-4xl mx-auto bg-white p-6 rounded-lg shadow-lg">
		<h1 class="text-3xl font-bold mb-6 text-gray-900">Synergy Index</h1>

		<table class="min-w-full table-auto border-collapse mb-6">
			<thead>
				<tr class="bg-gray-100">

					<th class="px-4 py-2 text-left font-medium text-gray-700">Id</th>
					<th class="px-4 py-2 text-left font-medium text-gray-700">Name</th>
					<th class="px-4 py-2 text-left font-medium text-gray-700">Actions</th>

				</tr>
			</thead>

			<tbody>
				{% for synergy in synergies %}
					<tr class="border-b">

						<td class="px-4 py-2 text-gray-900">{{ synergy.id }}</td>
						<td class="px-4 py-2 text-gray-900">{{ synergy.name }}</td>
						<td class="px-4 py-2 text-gray-900">

							<a href="{{ path('app_admin_synergy_show', {'id': synergy.id}) }}" class="text-blue-600 hover:text-blue-800 font-medium mr-4">Show</a>
							<a href="{{ path('app_admin_synergy_edit', {'id': synergy.id}) }}" class="text-blue-600 hover:text-blue-800 font-medium">Edit</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="3" class="px-4 py-2 text-center text-gray-500">No records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

		<div class="flex justify-end">
			<a href="{{ path('app_admin_synergy_new') }}" class="text-white bg-blue-600 hover:bg-blue-700 font-bold py-2 px-4 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50">
				Create New
			</a>
		</div>
	</div>

{% endblock %}
