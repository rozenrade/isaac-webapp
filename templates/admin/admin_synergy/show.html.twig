{% extends 'base.html.twig' %}

{% block title %}Synergy
{% endblock %}

{% block body %}
	<div class="max-w-4xl mx-auto dep-300 p-6 rounded-lg shadow-lg mt-16">
		<h1 class="text-3xl font-bold mb-6 text-white">Synergy</h1>

		<table class="min-w-full table-auto border-collapse">
			<tbody>
				<tr class="border-b">
					<th class="px-4 py-2 text-left font-medium text-white">Id</th>
					<td class="px-4 py-2 text-white">{{ synergy.id }}</td>
				</tr>
				<tr class="border-b">
					<th class="px-4 py-2 text-left font-medium text-white">Name</th>
					<td class="px-4 py-2 text-white">
						{{ synergy.name }}</td>
				</tr>
				<tr class="border-b">
					<th class="px-4 py-2 text-left font-medium text-white">Liste des items présents</th>
					{% for item in items %}
						<td class="px-4 py-2 text-white">
							{{ item.name }}</td>
					{% else %}
						<li class="text-gray-500">Aucun item associé à cette synergie.</li>
					{% endfor %}
				</tr>
			</tbody>
		</table>

		<div class="mt-6 flex space-x-4">
			<a href="{{ path('app_admin_synergy_index') }}" class="text-blue-600 hover:text-blue-800 font-medium">
				Back to list
			</a>

			<a href="{{ path('app_admin_synergy_edit', {'id': synergy.id}) }}" class="text-blue-600 hover:text-blue-800 font-medium">
				Edit
			</a>
		</div>
	</div>


	{{ include('admin/admin_synergy/_delete_form.html.twig') }}
{% endblock %}
