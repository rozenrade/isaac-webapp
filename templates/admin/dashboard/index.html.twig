{% extends 'base.html.twig' %}

{% block title %}Dashboard
{% endblock %}

{% block body %}
	<div class="max-w-4xl mx-auto dep-300 p-6 rounded-lg shadow-lg mt-16">
		<h1 class="text-3xl font-bold mb-6 text-white text-center">Dashboard</h1>

		<div class="flex flex-col space-y-4 gap-4">
			<div class="flex flex-row justify-between">
				<div class="text-white">
					<h2 class="text-2xl font-bold">Synergies</h2>
					<p class="text-gray-400">Manage existing synergies</p>
				</div>
				<a href="{{ path('app_admin_synergy_index') }}" class="text-white bg-blue-500 hover:bg-blue-600 transition duration-300 ease-in-out font-bold py-2 px-4 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50">
					Manage
				</a>
			</div>

			<div class="flex flex-row justify-between">
				<div class="text-white">
					<h2 class="text-2xl font-bold">Messages</h2>
					<p class="text-gray-400">See all the received messages</p>
				</div>
				<a href="{{ path('app_admin_messages') }}" class="text-white bg-blue-500 hover:bg-blue-600 transition duration-300 ease-in-out font-bold py-2 px-4 rounded-md focus:outline-none  focus:ring-opacity-50">
					View
				</a>
			</div>
		</div>
	</div>
{% endblock %}
