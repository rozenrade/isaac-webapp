{% extends 'base.html.twig' %}

{% block title %}Isaac's Bravery - Your Profile
{% endblock %}

{% block body %}
	<div class="flex flex-col items-center justify-center">
		<h1 class="text-white text-[32px]">Welcome to your very own profile page</h1>
        

		<div class="flex flex-col items-center justify-center">
			<h2 class="text-white text-[24px]">Your builds</h2>
			<div class="flex flex-col gap-4 mt-4">
				{% for build in builds %}
					<div class="flex flex-row items-center gap-4">
						<img src="{{ build.image }}" alt="{{ build.name }}" class="w-32 h-32 rounded-full">
						<div class="flex flex-col">
							<h3 class="text-white text-[16px]">{{ build.name }}</h3>
							<p class="text-white text-[12px]">{{ build.date|date('d/m/Y') }}</p>
						</div>
					</div>
				{% endfor %}
			</div>
		</div>
	</div>


{% endblock %}
