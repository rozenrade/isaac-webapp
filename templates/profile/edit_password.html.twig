{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
	<div class="max-w-2xl mx-auto mt-10 p-6 dep-300 shadow-lg rounded-lg">
		<h2 class="text-2xl font-bold mb-4 text-white">Change your password</h2>

		{% for message in app.flashes('error') %}
			<div class="mb-4 p-2 bg-red-200 text-red-800 rounded">
				{{ message }}
			</div>
		{% endfor %}

		{% for message in app.flashes('success') %}
			<div class="mb-4 p-2 bg-green-200 text-green-800 rounded">
				{{ message }}
			</div>
		{% endfor %}

		{{ form_start(form, {'attr': {'class': 'space-y-8 mt-4'}}) }}
		<div class="text-white space-y-4">
			<label class="block text-white font-semibold">{{ form.currentPassword.vars.label }}</label>
			{{ form_widget(form.currentPassword, {'attr': {'class': 'w-full px-4 py-2 border rounded-md'}}) }}
		</div>

		<div class="text-white space-y-10">
			<label class="block text-white font-semibold">{{ form.newPassword.vars.label }}</label>
			{{ form_widget(form.newPassword, {'attr': {'class': 'w-full px-4 py-2 border rounded-md'}}) }}
		</div>

		<div class="text-white space-y-10">
			<label class="block text-white font-semibold">{{ form.confirmPassword.vars.label }}</label>
			{{ form_widget(form.confirmPassword, {'attr': {'class': 'w-full px-4 py-2 border rounded-md'}}) }}
		</div>

		<div class="sm:text-right text-center">
			{{ form_widget(form.save, {'attr': {'class': 'bg-blue-500 text-white px-4 py-2 rounded tear-300 tear-hover transition-all duration-300'}}) }}
			<a href="{{ path('app_profile') }}" class="text-white font-semibold heart-200 px-4 py-2 rounded heart-hover transition-all duration-300">Cancel</a>
		</div>


		{{ form_end(form) }}
	</div>
{% endblock %}
