{% extends 'base.html.twig' %}

{% block title %}Isaac's Bravery - Se connecter
{% endblock %}

{% block body %}
	<div class="p-16 flex flex-row justify-start min-h-screen">
		<div class="bg-gray-200 p-16 shadow-md rounded-xl w-full max-w-lg">
			<h1 class="text-2xl font-bold text-center mb-8">Connexion</h1>

			<!-- Affichage de l'erreur globale de sécurité -->
			{% if error %}
				<div class="text-red-500 text-sm mb-4">
					{{ error.messageKey|trans(error.messageData, 'security') }}
				</div>
			{% endif %}

			{{ form_start(form) }}
			
			<div class="mb-4">
				{{ form_label(form.email, 'Email', {'label_attr': {'class': 'text-xl font-bold text-blue-500'}}) }}
				{{ form_widget(form.email, {'attr': {'class': 'p-4 text-[24px] focus:outline-none w-full'}, full_name:'email'}) }}
				<div class="text-red-500 text-sm">
					{{ form_errors(form.email) }}
				</div>
			</div>
			<div class="mb-4">
				{{ form_label(form.password, 'Mot de passe', {'label_attr': {'class': 'text-xl font-bold text-blue-500'}}) }}
				{{ form_widget(form.password, {'attr': {'class': 'p-4 text-[24px] focus:outline-none w-full'}, full_name:'password'}) }}
				<div class="text-red-500 text-sm">
					{{ form_errors(form.password) }}
				</div>
			</div>
			<div class="mt-8">
				{{ form_widget(form.submit, {'attr': {'class': 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded w-full'}}) }}
			</div>

			{{ form_end(form) }}

		</div>
	</div>
{% endblock %}
