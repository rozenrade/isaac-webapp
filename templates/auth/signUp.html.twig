{% extends 'base.html.twig' %}

{% block title %}Isaac's Bravery - S'enregistrer{% endblock %}

{% block body %}
<div class="p-16 flex flex-row justify-start min-h-screen">
	<div class="bg-gray-200 p-16 shadow-md rounded-xl w-full max-w-lg">
		<h1 class="text-2xl font-bold text-center mb-8">Inscription</h1>
		{{ form_start(form) }}
		<div>
			{{ form_label(form.username, 'Nom d\'utilisateur', {'label_attr': {'class': 'text-xl font-bold text-blue-500'}}) }}
			{{ form_widget(form.username, {'attr': {'class': 'p-4 text-[24px] focus:outline-none w-full'}}) }}
			{{ form_errors(form.username) }}
		</div>
		<div>
			{{ form_label(form.email, 'Email', {'label_attr': {'class': 'text-xl font-bold text-blue-500'}}) }}
			{{ form_widget(form.email, {'attr': {'class': 'p-4 text-[24px] focus:outline-none w-full'}}) }}
			{{ form_errors(form.email) }}
		</div>
		<div>
			{{ form_label(form.password.first, 'Mot de passe', {'label_attr': {'class': 'text-xl font-bold text-blue-500'}}) }}
			{{ form_widget(form.password.first, {'attr': {'class': 'p-4 text-[24px] focus:outline-none w-full'}}) }}
			{{ form_errors(form.password.first) }}
		</div>
		<div>
			{{ form_label(form.password.second, 'Confirmez le mot de passe', {'label_attr': {'class': 'text-xl font-bold text-blue-500'}}) }}
			{{ form_widget(form.password.second, {'attr': {'class': 'p-4 text-[24px] focus:outline-none w-full'}}) }}
			{{ form_errors(form.password.second) }}
		</div>
		<div class="mt-8">
			{{ form_widget(form.submit, {'attr': {'class': 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded w-full'}}) }}
		</div>
		{{ form_end(form) }}
	</div>
</div>
{% endblock %}
