{% extends 'base.html.twig' %}

{% block title %}Contact
{% endblock %}

{% block body %}
	<div class="flex flex-col items-center p-8 bg-opacity-90 w-full rounded-lg shadow-md">
		<h1 class="text-2xl font-bold text-white mb-4">Contactez-nous</h1>

		{% for message in app.flashes('success') %}
			<div class="w-full max-w-md p-3 mb-4 text-green-800 bg-green-100 border border-green-400 rounded">
				{{ message }}
			</div>
		{% endfor %}

		<div class="w-full max-w-md bg-white p-6 rounded shadow">
			{{ form_start(form, { 'attr': {'class': 'space-y-4'} }) }}

			<div>
				{{ form_widget(form.name, { 'attr': {'class': 'w-full p-2 border border-none bg-gray-200 rounded focus:ring-2 focus:border-none'} }) }}
			</div>

			<div>
				{{ form_widget(form.email, { 'attr': {'class': 'w-full p-2 border border-none bg-gray-200 rounded focus:ring-2 focus:border-none'} }) }}
			</div>

			<div>
				{{ form_widget(form.message, { 'attr': {'class': 'w-full p-2 border border-none bg-gray-200 rounded focus:ring-2 focus:border-none max-h-24 resize-none'} }) }}
			</div>

			<div>
				{{ form_widget(form.submit, { 'attr': {'class': 'w-full bg-red-600 text-white py-2 rounded hover:bg-red-700 transition'} }) }}
			</div>

			{{ form_end(form) }}
		</div>
	</div>


{% endblock %}
