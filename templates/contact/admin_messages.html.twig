{% extends 'base.html.twig' %}

{% block title %}Contact
{% endblock %}

{% block body %}
	<h1>Messages</h1>

	<table class="w-full border-collapse dep-500 shadow-lg rounded-lg overflow-hidden">
		<thead>
			<tr class="bg-blue-600 text-white text-left">
				<th class="px-6 py-3">Message</th>
				<th class="px-6 py-3">Name</th>
				<th class="px-6 py-3">Email</th>
				<th class="px-6 py-3">Actions</th>
			</tr>
		</thead>
		<tbody>
			{% for message in messages %}
				<tr class="border-b dep-500{% if loop.index is even %}dep-500{% endif %} dep-500">
					<td class="px-6 py-4 text-white">{{ message.message }}</td>
					<td class="px-6 py-4 text-white">{{ message.name }}</td>
					<td class="px-6 py-4 text-white">{{ message.email }}</td>
					<td class="px-6 py-4">
						<a href="{{ path('app_contact_delete', {'id': message.id}) }}" class="inline-block px-4 py-2 text-white bg-red-500 rounded-lg hover:bg-red-600 transition">
							Delete
						</a>
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

{% endblock %}
