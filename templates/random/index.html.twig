{% extends 'base.html.twig' %}

{% block title %}Isaac's bravery - Randomizer
{% endblock %}

{% block body %}

{% if not statusURL %}
    <h1 class="p-4 text-center text-white">You can use our randomizer on this page</h1>
{% endif %}

<div class="flex flex-col items-center justify-center">
    <a href="{{ path('app_random', {status: 'random'} ) }}" class="text-white p-4 bg-blue-500 rounded-lg">Randomize</a>
    <div id="item-container">
        {# Un item aléatoire est affiché ici #}
        {% if statusURL %}
            {% for item in itemSet %}
                <div class="flex flex-row justify-center items-center w-[8rem] h-[8rem] bg-gray-800 m-8">
                    <p class="text-white">{{ item.name }}</p>
                </div>
            {% endfor %}
        {% endif %}

        <button href="{{ path('app_random', {status: 'saved'}) }}" class="text-white p-4 bg-blue-500 rounded-lg" id="save-button">SAUVEGARDER BUILD</button>
    </div>
</div>

{% endblock %}
